# ==================== CUSTOM RULES ====================

# Handle calculator URLs
RewriteRule ^calculators/([^/]+)/?$ calculators/$1/index.php [NC,L]

# Handle category pages
RewriteRule ^category/([^/]+)/?$ calculators/$1-calculators.php [NC,L]

# Handle search
RewriteRule ^search/?$ search.php [NC,L]

# Handle user profiles
RewriteRule ^user/([^/]+)/?$ user/profile.php?username=$1 [NC,L]

# ==================== FALLBACK RULES ====================

# If file doesn't exist, redirect to 404
